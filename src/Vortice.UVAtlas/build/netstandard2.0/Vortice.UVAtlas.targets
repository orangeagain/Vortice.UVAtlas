<Project>
  <PropertyGroup>
    <CopyNativeAssemblies_Vortice_UVAtlas Condition="'$(CopyNativeAssemblies_Vortice_UVAtlas)' == '' and '$(TargetFrameworkIdentifier)' == '.NETFramework'">true</CopyNativeAssemblies_Vortice_UVAtlas>
  </PropertyGroup>

  <ItemGroup Condition="'$(CopyNativeAssemblies_Vortice_UVAtlas)' == true">
    <None Include="$(MSBuildThisFileDirectory)\..\..\runtimes\win-x64\native\*.dll">
      <Link>x64\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>False</Visible>
    </None>
    <None Include="$(MSBuildThisFileDirectory)\..\..\runtimes\win-x86\native\*.dll">
      <Link>x86\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>False</Visible>
    </None>
    <None Include="$(MSBuildThisFileDirectory)\..\..\runtimes\win-arm64\native\*.dll">
      <Link>x86\%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>False</Visible>
    </None>
  </ItemGroup>
</Project>
